<div class="max-w-2xl mx-auto p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Deposit Funds</h1>

  <%= form_with model: @deposit, local: true, class: "space-y-6" do |f| %>
    <% if @deposit.errors.any? %>
      <div class="bg-red-50 p-4 rounded text-red-700">
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc ml-5">
          <% @deposit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :account_type, "Select Account", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :account_type, [["Savings Account", "SavingsAccount"], ["Investing Account", "InvestingAccount"]], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :amount, "Amount ($)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :amount, step: 0.01, min: 0.01, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :slip, "Upload Transfer Slip", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :slip, required: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Submit Deposit", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    </div>

    <div class="text-center">
      <%= link_to "Back to Dashboard", root_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>
</div>
